@using TwitterClone.UI.Models;

@{
    ViewBag.Title = "Twitter stream";
}
<div class="container row searchdiv">
    <div class="row">
        <div class="col-lg-3">
            <label>Follow</label>
        </div>
        <div>
            <label>What are you doing?</label>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <form action="" class="search-form">
                <div class="form-group has-feedback">
                    <label for="search" class="sr-only">Search</label>
                    <input type="text" class="form-control" name="search" id="search" placeholder="search">
                    <span class="glyphicon glyphicon-search form-control-feedback"></span>
                </div>
                <lable class="row col-lg-offset-2">3 Tweets</lable>
                <lable class="row col-lg-offset-2">1 Following</lable>
                <lable class="row col-lg-offset-3">5 Followers</lable>
            </form>
        </div>
        <div class="col-lg-offset-3">
            <textarea class="form-control" style="min-width: 100%" rows="5" id="comment"></textarea>
        </div>
        <div class="col-lg-10" style="padding:30px;">
            @*<label class="col-lg-offset-1"> Tweets</label>*@
            <input type="button" class="row btn col-sm-1" value="Tweet" style="float:right;" />
        </div>
    </div>
    <div class="col-lg-offset-3 panel panel-default">
        <div class="panel-heading"><strong>Tweets</strong></div>
        <div class="panel-body" style="height:300px;"></div>
    </div>
    @*<div>
            <lable class="col-lg-pull-5">3 Tweets</lable>
            <lable class="row col-lg-0">1 Following</lable>
            <lable class="row col-lg-0">5 Followers</lable>
        </div>*@
</div>

@if(Model!= null && Model.showDialog){
<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>This is a small modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
}

